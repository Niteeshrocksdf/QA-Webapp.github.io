<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title -Question And Answer</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
    <link href="~/Content/style4.css" rel="stylesheet" />
    <script defer src="https://use.fontawesome.com/releases/v5.0.13/js/solid.js" integrity="sha384-tzzSw1/Vo+0N5UhStP3bvwWPq+uvzCMfrN1fEFe+xBmv1C/AtVX5K0uZtmcHitFZ" crossorigin="anonymous"></script>
    <script defer src="https://use.fontawesome.com/releases/v5.0.13/js/fontawesome.js" integrity="sha384-6OIrr52G08NpOFSZdxxz1xdNSndlD4vdcf/q2myIUVO0VsqaGHJsB0RaBE01VTOY" crossorigin="anonymous"></script>

    <style>
        .btn-info {
            background-color: #4285f4 !important;
        }

        body {
            font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
        }

        .card {
            /* Add shadows to create the "card" effect */ box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
            transition: 0.3s;
        }

        #lprj {
            width: 120px;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
            font-size: 1.2rem;
            margin: 0;
        }
    </style>

</head>
<body>

    <div class="wrapper" style="margin-top:-50px;">
        <!-- Sidebar  -->
        <nav id="sidebar">
            <div class="sidebar-header">
            </div>
            <ul class="list-unstyled components">
                <li class="active">
                    <a href='@Url.Action("Index", "Home")'>
                        <i class="glyphicon glyphicon-home"></i>
                        Home
                    </a>

                </li>
                <li>
                    @if (Session["Role"].ToString() == "Admin")
                    {
                        <a href='@Url.Action("Security", "Home")'>
                            <i class="glyphicon glyphicon-lock"></i>
                            User Login
                        </a>
                    }

                </li>


                <li>
                    @if (Session["Role"].ToString() == "Admin")
                    {
                        <a href='@Url.Action("Roles", "Home")'>
                            <i class="glyphicon glyphicon-user"></i>
                            Roles
                        </a>
                    }

                </li>

                <li>
                    @if (Session["Role"].ToString() == "Client" || Session["Role"].ToString() == "Admin")
                    {
                        <a href="/Home/clientarea?id=0">
                            <i class="glyphicon glyphicon-book"></i>
                            Generate Ticket
                        </a>
                    }
                </li>

                <li>
                    @if (Session["Role"].ToString() == "Client")
                    {
                        <a href='@Url.Action("FAQPage", "Home")'>
                            <i class="glyphicon glyphicon-book"></i>
                            General FAQ
                        </a>
                    }
                </li>

                <li>
                    @if (Session["Role"].ToString() == "Inspector")
                    {
                        <a href='@Url.Action("PendingList", "Home")'>
                            <i class="glyphicon glyphicon-book"></i>
                            Pending Ticket
                        </a>
                    }
                </li>

                <li>
                    @if (Session["Role"].ToString() == "Inspector")
                    {
                        <a href='@Url.Action("RecentTicket", "Home")'>
                            <i class="glyphicon glyphicon-book"></i>
                            Recent Ticket
                        </a>
                    }
                </li>

                <li>
                    @if (Session["Role"].ToString() == "Inspector")
                    {
                        <a href='@Url.Action("AnsweredTicket", "Home")'>
                            <i class="glyphicon glyphicon-book"></i>
                            Answered Ticket
                        </a>
                    }
                </li>
                <li>
                    @if (Session["Role"].ToString() == "Inspector")
                    {
                        <a href='@Url.Action("ApprovedTicket", "Home")'>
                            <i class="glyphicon glyphicon-book"></i>
                            Approved Ticket
                        </a>
                    }
                </li>

                <li>
                    @if (Session["Role"].ToString() == "Approver")
                    {
                        <a href='@Url.Action("PendingList", "Home")'>
                            <i class="glyphicon glyphicon-book"></i>
                            Approval Pending
                        </a>
                    }
                </li>

                <li>
                    @if (Session["Role"].ToString() == "Approver")
                    {
                        <a href='@Url.Action("RecentTicket", "Home")'>
                            <i class="glyphicon glyphicon-book"></i>
                            Recent Ticket
                        </a>
                    }
                </li>
                <li>
                    @if (Session["Role"].ToString() == "Approver")
                    {
                        <a href='@Url.Action("ApprovedTicket", "Home")'>
                            <i class="glyphicon glyphicon-book"></i>
                            Approved Ticket
                        </a>
                    }
                </li>

                <li>
                    @if (Session["Role"].ToString() == "Admin")
                    {
                        <a href="#homeSubmenu" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle collapsed">
                            <i class="glyphicon glyphicon-book"></i>
                            Ques Grp-Level
                        </a>
                        <ul class="list-unstyled collapse" id="homeSubmenu" style="">
                            <li>
                                <a href='@Url.Action("grouplevel1", "Home")'>
                                    <i class="glyphicon glyphicon-book"></i> Ques Grp Level-1
                                </a>

                            </li>
                            <li>

                                <a href='@Url.Action("grouplevel2", "Home")'>
                                    <i class="glyphicon glyphicon-book"></i> Ques Grp Level-2
                                </a>
                            </li>


                        </ul>
                    }
                </li>

                @*<li>
                            @if (data.Roles == "Inspector")
                            {
                                <a href='@Url.Action("TicketInspection", "Home")'>
                                    <i class="glyphicon glyphicon-user"></i>
                                    Ticket Inspection
                                </a>
                            }
                    </li>*@

            </ul>
            <ul class="list-unstyled CTAs">
                <li>


                </li>
                <li>
                </li>
            </ul>
        </nav>
        <!-- Page Content  -->
        <div id="content" style="margin-top:-20px">
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <div class="container-fluid">
                    <button type="button" id="sidebarCollapse" class="btn btn-info" style="margin-top:5px;">
                        <i class="fas fa-align-left"></i>
                    </button>
                    &nbsp; <span id="" style="font-size:14px;color:white">Question and Answer Management</span>
                    <ul class="list-inline" style="margin-top:5px;float:right">
                        <li>
                            <span id="adminId" style="font-size:12px;color:white"></span>
                        </li>
                        <li>

                        </li>

                        <li class="dropdown notifications-menu">
                            @if (Session["Role"].ToString() == "Account")
                            {
                                <span class="label label-danger" style="padding:2px;position:absolute;margin-left:10px;">
                                    @*@projectcount.Count()*@
                                </span>
                                <img src="https://img.icons8.com/emoji/20/000000/bell-emoji.png" style="color:white;margin-top:5px;cursor:pointer;" onclick="notification();">
                                <div id="notification" class="card" style="background-color: white; width: 250px; height: 250px; position: absolute; z-index: 1; /* margin-right: 224px; */ right: 0px; top: 24px;overflow-y:scroll">
                                    <span style="font-weight:bold;margin-left:5px"> You have  @*@projectcount.Count()*@  notification</span> <img src="~/Images/delete-sign.png" style="float:right;cursor:pointer" onclick="divclose();" />
                                    <hr style="margin-top:4px;" />
                                    <ul class="card" style="list-style: none; margin-top: -16px;">
                                        @*@foreach (var i in projectcount)
                                            {*@

                                        <li style="height: 30px; background-color: antiquewhite;margin-top:10px;width:233px;margin-left:-40px">
                                            <label id="lprj" style="margin-left: 5px; margin-top: 5px;">@*@i.Client*@</label> <span class="label label-success" style="float:right;margin-top:7px;">@*@i.Invoicing_Status*@</span>
                                            <br />

                                        </li>
                                        @*}*@
                                    </ul>

                                </div>
                            }

                        </li>
                        <li>

                        </li>
                        <li>

                        </li>
                        <li>
                            <span style="color:white;/* margin-top:5px; */cursor:pointer;" onclick="logout();"><i class="glyphicon glyphicon-log-out"></i>  Logout</span>

                        </li>
                    </ul>
                </div>
            </nav>
            @RenderBody()
        </div>
    </div>

    
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js" type="text/javascript"></script>
    <script src="https://cdn.datatables.net/1.10.20/js/dataTables.bootstrap.min.js" type="text/javascript"></script>
    <script src="https://cdn.datatables.net/responsive/2.2.3/js/dataTables.responsive.min.js" type="text/javascript"></script>
    <script src="https://cdn.datatables.net/responsive/2.2.3/js/responsive.bootstrap.min.js" type="text/javascript"></script>


    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.0/umd/popper.min.js" integrity="sha384-cs/chFZiN24E4KMATLdqdvsezGxaGsi4hLGOzlXwp5UZB1LY//20VyM2taTB4QvJ" crossorigin="anonymous"></script>
    <!-- Bootstrap JS -->
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/js/bootstrap.min.js" integrity="sha384-uefMccjFJAIv6A+rW+L4AHf99KvxDjWSu1z9VI8SKNVmz4sk7buKt/6v9KI65qnm" crossorigin="anonymous"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $("#notification").css("display", "none");
            $('#sidebarCollapse').on('click', function () {
                $('#sidebar').toggleClass('active');
            });

            // $("#adminId").html("Hi   " + localStorage.getItem("username"));
            $("#adminId").html("Hi   " + '@Session["FullName"]');
            var user = $("#adminId").html();
            //  $("#shortadmin").html(user.substring(0, 2))

        });

        function logout() {
            window.location.href = '/Account/Logout';
        }

        function notification() {
            $("#notification").show();
        }
        function divclose() {
            $("#notification").hide();
        }

    </script>


</body>
</html>
